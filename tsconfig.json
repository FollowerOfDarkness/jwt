{
    "include": [
        "src/**/*"
    ],
    "compilerOptions": {
        "allowJs": true,
        "checkJs": false,
        "strict": true,
        "target": "es2019",
        "lib": [
            "es2020",
            "dom"
        ],
        "moduleResolution": "Node",
        "module": "commonjs",
        "allowSyntheticDefaultImports": true,
        "sourceMap": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "outDir": "dist",
        "declaration": true
    }
}